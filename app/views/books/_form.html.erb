<%= simple_form_for(book) do |f| %>

  <div class="field">
    <%= f.input :name, label: "書名" %>
  </div>

  <div class="field">
    <%= f.input :author, label: "作者" %>
  </div>

  <div class="field">
    <%= f.input :year, label: "出版年" %>
  </div>
  
  <div class="field">
    <%= f.input :image %> <!-- 上傳 -->
    <%= f.check_box :remove_image, label: "刪除圖片" %> <!-- 刪除 -->
    <%= f.hidden_field :image_cache %> <!-- 快取 _cache (讓填表時若有誤，不用重新選擇圖片) -->
    <%= image_tag @book.image if @book.image? %> <!-- 如果 book 已有圖片的話，就顯示 -->
  </div>

  <div class="actions">
    <%= f.button :submit, "更新好書", class: "btn btn-success"%>
  </div>
<% end %>
